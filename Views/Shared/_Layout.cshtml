<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TradeTrove</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TradeTrove.styles.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">

    <style>
        body {
            font-family: 'Montserrat',serif;
            font-size: 15px;
        }

        .searchBar {
            width: 500px;
            height: 45px;
            border: none;
            border-radius: 7px;
        }

        .searchBtn {
            border: none;
            background: #2877ee;
            padding: 0 15px 0 15px;
        }

        .locationBtn {
            border: none;
            background: #252734;
            padding: 0 15px;
        }

        .no-style-btn {
            border: none;
            background: white;
        }
        
        .searchBarBg {
            background-color: #2877ee;
            padding: 2px;
            border-radius: 7px;
        }

        .btnCatalog {
            width: 175px;
            height: 48px;
            border: none;
            border-radius: 7px;
            background: #2877ee;
        }

        .btnCatalog:hover {
            width: 175px;
            height: 48px;
            border: none;
            border-radius: 7px;
            background: #1f60bf;
        }

        .normalBtn {
            border-radius: 7px;
            background-color: white;
            color: black;
            text-decoration: none;
            font-size: 22px;
        }


        .deliveryDiv {
            background-color: #252734;
            padding: 15px 35px;
            font-size: 13px;
        }

        .toggleCheckbox {
            display: none;
        }

        .toggleContainer {
            position: relative;
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            width: 200px;
            border: none;
            border-radius: 7px;
            background-color: #393b48;
            font-weight: bold;
            color: #343434;
            cursor: pointer;
        }

        .toggleContainer::before {
            content: '';
            position: absolute;
            width: 50%;
            height: 100%;
            left: 0;
            border-radius:7px;
            background: white;
            transition: all 0.3s;
        }

        .toggleContainer div {
            font-size: 12px;
            padding: 5px 15px;
            text-align: center;
            z-index: 1;
        }

        .toggleCheckbox:checked + .toggleContainer::before {
            left: 50%;
        }

        .toggleCheckbox:checked + .toggleContainer div:first-child{
            color: white;
            transition: color 0.3s;
        }
        .toggleCheckbox:checked + .toggleContainer div:last-child{
            color: #343434;
            transition: color 0.3s;
        }
        .toggleCheckbox + .toggleContainer div:first-child{
            color: #343434;
            transition: color 0.3s;
        }
        .toggleCheckbox + .toggleContainer div:last-child{
            color: white;
            transition: color 0.3s;
        }

        .nearestDeliver {
            color: #61646d;
        }

        .buttons {
            width: 350px;
        }
        
    </style>
    
</head>
<body>
    <header>
        <div class="d-flex justify-content-around container-fluid deliveryDiv">
            <div class="d-flex justify-content-start">
                <div class="btn-group">
                    <input type="checkbox" id="toggle" class="toggleCheckbox" />
                    <label for="toggle" class="toggleContainer">
                        <div>Delivery</div>
                        <div>Pickup</div>
                    </label>
                </div>

                <label class="text-white mt-1 ms-5 fw-bold">Select the delivery address</label>
                <button class="locationBtn">
                    <img src="/Images/edit-location-icon.png" width="20" height="20">
                </button>

                <label class="nearestDeliver mt-1 ms-5 fw-bold">Nearest delivery</label>
                <label class="text-white mt-1 ms-1 fw-bold">today is 13:00 - 14:00</label>
            </div>

            <div class="d-flex justify-content-end">
                <label class="text-white mt-1 me-1 fw-bold">+ 8 800 555-35-35</label>
                <label class="nearestDeliver mt-1 ms-1 fw-bold">Around the clock</label>
            </div>



        </div>
        <nav class="navbar navbar-expand-lg bg-white border-bottom border-2">
            <div class="container-fluid d-flex justify-content-around">
                <div class="d-flex justify-content-start align-items-center">
                    <a class="navbar-brand" href="#">
                        <img src="/Images/logo.png" width="50" height="50">
                    </a>

                    <button class="btn btnCatalog me-3 ms-5 text-white">
                        <img src="/Images/catalog-icon.png" width="25" height="25">
                        Catalog
                    </button>
                    <form class="d-flex searchBarBg ms-4" role="search">
                        <input class="form-control searchBar" type="search" placeholder="Search in the market" aria-label="Search">
                        <button class="searchBtn">
                            <img src="/Images/search-icon.png" width="20" height="20">
                        </button>
                    </form>
                </div>

                <div class="buttons d-flex justify-content-evenly">
                    <a href="#">
                        <i class="bi bi-box-seam btn border border-2 normalBtn"></i>
                    </a>
                    <a href="#">
                        <i class="bi bi-heart btn border border-2 normalBtn"></i>
                    </a>
                    <a href="#">
                        <i class="bi bi-cart3 btn border border-2 normalBtn"></i>
                    </a>
                    <a href="#">
                        <i class="bi bi-person btn border border-2 normalBtn"></i>
                    </a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - TradeTrove - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
